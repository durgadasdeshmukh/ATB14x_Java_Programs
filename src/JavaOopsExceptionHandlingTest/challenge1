package JavaOopsExceptionHandlingTest;
// Person class with attributes name and age
class Person {

    // Instance variables to store name and age
    String name;
    int age;

    // Constructor to initialize the Person object
    Person(String name, int age) {
        this.name = name;   // Assign name
        this.age = age;     // Assign age
    }

    // Method to display the person's details
    void display() {
        System.out.println("Name: " + name + ", Age: " + age);
    }
}

// Main class to run the program
public class Main {
    public static void main(String[] args) {

        // Creating Person objects with given names and ages
        Person p1 = new Person("John", 25);
        Person p2 = new Person("Alice", 30);

        // Displaying details of each Person
        p1.display();
        p2.display();
    }
}
